@model List<BookingApiViewModel.Result>

@{
	Layout = null;
	int count = 0;
}

<link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />

<div class="container">
	<br /><br />
	<table class="table table-bordered">
		<tr>
			<th>#</th>
			<th>Otel Adı</th>
			<th>Otel Puanı</th>
			<th>Otel Görsel</th>
			<th>Detaylar</th>
		</tr>
		@foreach (var item in Model)
		{
			count++;
			<tr>
				<td>@count</td>
				<td>@item.name</td>
				<td>@item.reviewScore</td>
				<td>
					<img src="@item.photoMainUrl" style="height:80px; width:110px; object-fit:cover;" />
				</td>
				<td>
					<a href="#" class="btn btn-secondary">Detaylar</a>
				</td>
			</tr>
		}
	</table>
</div>
