@model List<BookingApiViewModel.Result>

@{
	Layout = null;
	int count = 0;
}
<div class="container">
	<br /><br />
	@using (Html.BeginForm("Index", "BookingByCity", FormMethod.Post))
	{
		<label>Şehir ID Bilgisi Giriniz</label>
		<input type="text" class="form-control" name="cityId" />
		<br />
		<button class="btn btn-primary">Şehir İçin Otel Listele</button>
	}

	<link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />

	<br />
	
	<table class="table table-bordered">
		<tr>
			<th>#</th>
			<th>Otel Adı</th>
			<th>Otel Puanı</th>
			<th>Otel Görsel</th>
			<th>Detaylar</th>
		</tr>
		@foreach (var item in Model)
		{
			count++;
			<tr>
				<td>@count</td>
				<td>@item.name</td>
				<td>@item.reviewScore</td>
				<td>
					<img src="@item.photoMainUrl" style="height:80px; width:110px; object-fit:cover;" />
				</td>
				<td>
					<a href="#" class="btn btn-secondary">Detaylar</a>
				</td>
			</tr>
		}
	</table>
</div>
