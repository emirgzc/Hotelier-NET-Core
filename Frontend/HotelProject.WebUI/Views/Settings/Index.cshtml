
@model HotelProject.WebUI.Models.Setting.UserEditViewModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}


<form method="post">
    <label>Adınız</label>
    <input type="text" class="form-control" asp-for="Name"/>
    <br />
    <label>Soyadınız</label>
    <input type="text" class="form-control" asp-for="Surname" />
    <br />
    <label>Kullanıcı Adınız</label>
    <input type="text" class="form-control" asp-for="Username" disabled/>
    <br />
    <label>Mail Adresiniz</label>
    <input type="text" class="form-control" asp-for="Email" />
    <br />
    <label>Şifreniz</label>
    <input type="text" class="form-control" asp-for="Password" />
    <br />
    <label>Şifre Tekrar</label>
    <input type="text" class="form-control" asp-for="ConfirmPassword" />
    <br />
    <button class="btn btn-success">Bilgilerimi Güncelle</button>
</form>