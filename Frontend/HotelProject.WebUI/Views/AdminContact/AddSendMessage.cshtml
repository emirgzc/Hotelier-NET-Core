@model CreateSendMessageDto

@{
	ViewData["Title"] = "AddSendMessage";
	Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}



<div class="email-left-box">
	<a href="email-compose.html" class="btn btn-primary btn-block">Yeni Mesaj Oluştur</a>
	@await Html.PartialAsync("SidebarAdminContactPartial")

	<h5 class="mt-5 m-b-10">Kategoriler</h5>
	@await Html.PartialAsync("SidebarAdminContactCategoryPartial")

</div>

<div class="email-right-box">
	<form method="post">
		<div class="compose-content">

			<div class="form-group">
				<input type="text" class="form-control bg-transparent" asp-for="ReceiverMail" placeholder="Alıcı Mail">
			</div>
			<div class="form-group">
				<input type="text" class="form-control bg-transparent" asp-for="ReceiverName" placeholder="Alıcı Adı Soyadı">
			</div>
			<div class="form-group">
				<input type="text" class="form-control bg-transparent" asp-for="Title" placeholder="Konu">
			</div>
			<div class="form-group">
				<textarea class="textarea_editor form-control bg-light" rows="15" asp-for="Content" placeholder="Mesajınızı yazınız..."></textarea>
			</div>

		</div>
		<div class="text-left m-t-15">
			<button class="btn btn-primary m-b-30 m-t-15 f-s-14 p-l-20 p-r-20 m-r-10" type="submit"><i class="fa fa-paper-plane m-r-5"></i> Gönder</button>

			<button class="btn btn-dark m-b-30 m-t-15 f-s-14 p-l-20 p-r-20" type="button"><i class="ti-close m-r-5 f-s-12"></i> Vazgeç</button>
		</div>
	</form>
</div>

