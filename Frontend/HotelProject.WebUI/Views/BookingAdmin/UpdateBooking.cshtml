
@model HotelProject.WebUI.Dtos.BookingDto.UpdateBookingDto

@{
    ViewData["Title"] = "UpdateBooking";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}

<form method="post">
    <input type="hidden" asp-for="BookingID" />
    <label>Misafir Adı Soyadı</label>
    <input type="text" asp-for="Name" class="form-control" />
    <br />
    <label>Misafir Mail Adresi</label>
    <input type="email" asp-for="Mail" class="form-control" />
    <br />
    <label>Misafir Giriş Tarihi</label>
    <input type="date" asp-for="CheckIn" class="form-control" data-target="#date3" data-toggle="datetimepicker" />
    <br />
    <label>Misafir Çıkış Tarihi</label>
    <input type="date" asp-for="CheckOut" class="form-control" data-target="#date4" data-toggle="datetimepicker" />
    <br />
    <label>Yetişkin Sayısı</label>
    <input type="text" asp-for="AdultCount" class="form-control" />
    <br />
    <label>Çocuk Sayısı</label>
    <input type="text" asp-for="ChildCount" class="form-control" />
    <br />
    <label>Oda Sayısı</label>
    <input type="text" asp-for="RoomCount" class="form-control" />
    <br />
    <label>Şehir</label>
    <input type="text" asp-for="City" class="form-control" />
    <br />
    <label>Ülke</label>
    <input type="text" asp-for="Country" class="form-control" />
    <br />
    <label>Durum</label>
    <input type="text" asp-for="Status" class="form-control" />
    <br />
    <label>Özel İstekler</label>
    <textarea rows="5" asp-for="SpecialRequest" class="form-control"></textarea>
    <br />
    <label>Açıklama</label>
    <textarea rows="5" asp-for="Description" class="form-control"></textarea>
    <br />
    <button class="btn mb-1 btn-rounded btn-outline-success">Rezervasyon Güncelle</button>
</form>


<script>
	$('#date3').datetimepicker({
		format: 'DD.MM.YYYY HH:mm',
		locale: 'tr',
		timeZone: 'Europe/Istanbul'
	});

	$('#date4').datetimepicker({
		format: 'DD.MM.YYYY HH:mm',
		locale: 'tr',
		timeZone: 'Europe/Istanbul'
	});
</script>